<div class='col-lg-12'>
  <div class='page-header'>
    <h1 id='tables'>Adicionar Usu√°rio</h1>
  </div>

  <div class='bs-component col-lg-8'>
    <form id='signup_form' action='/signup' method='post'>
      <div class='form-group mt-2'>
        <label class='col-form-label' for='name'>Nome</label>
        <input
          type='text'
          class='form-control'
          id='name'
          name='name'
          value='{{funcionario.name}}'
        />
        <div class='invalid-feedback' style='display:block'>
          {{showErrors errors 'name'}}
        </div>
      </div>
      <div class='form-group mt-2'>
        <label class='col-form-label' for='email'>E-mail</label>
        <input
          type='text'
          class='form-control'
          id='email'
          name='email'
          value='{{funcionario.email}}'
        />
        <div class='invalid-feedback' style='display:block'>
          {{showErrors errors 'email'}}
        </div>
      </div>
      <div class='form-group mt-2'>
        <label class='col-form-label' for='departamentoId'>Departamento</label>
        <select class='form-select' name='departamentoId' id='departamentoId'>
          {{#each departamentos}}
            <option value='{{id}}'>{{name}}</option>
          {{/each}}
        </select>
        <div class='invalid-feedback' style='display:block'>
          {{showErrors errors 'departamentoId'}}
        </div>
      </div>
      <div class='form-group mt-2'>
        <label class='col-form-label' for='senha'>Senha</label>
        <input
          type='password'
          class='form-control'
          id='senha'
          name='senha'
          value='{{funcionario.senha}}'
        />
        <div class='invalid-feedback' style='display:block'>
          {{showErrors errors 'senha'}}
        </div>
      </div>
      <div class='form-group mt-2'>
        <label class='col-form-label' for='conf_senha'>Confirme sua senha</label>
        <input
          type='password'
          class='form-control'
          id='conf_senha'
          name='conf_senha'
          value='{{funcionario.senha}}'
        />
        <div id='confirm-senha-error' style='display:block'>
          {{showErrors errors 'senha'}}
        </div>
      </div>

      <div class='form-group mt-4'>
        <input type='hidden' name='_csrf' value='{{csrf}}' />
        <button type='submit' class='btn btn-primary'>Salvar</button>
        <a href='/' class='btn btn-primary'>Voltar</a>
      </div>
    </form>
  </div>
</div>